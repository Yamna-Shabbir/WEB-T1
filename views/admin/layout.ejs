<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title><%= typeof title !== 'undefined' ? title : 'Admin Panel - Gym Supplies Hub' %></title>
  <link rel="stylesheet" href="/css/admin.css" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="admin-body">
  <div class="admin-wrapper">
    <!-- Admin Sidebar -->
    <aside class="admin-sidebar">
      <div class="admin-logo">
        <h2><i class="fa-solid fa-shield-halved"></i> Admin Panel</h2>
        <p class="text-muted small">Gym Supplies Hub</p>
      </div>
      
      <nav class="admin-nav">
        <a href="/admin" class="nav-item <%= page === 'dashboard' ? 'active' : '' %>">
          <i class="fa-solid fa-chart-line"></i> Dashboard
        </a>
        <a href="/admin/products" class="nav-item <%= page === 'products' ? 'active' : '' %>">
          <i class="fa-solid fa-box"></i> Products
        </a>
        <a href="/admin/products/add" class="nav-item <%= page === 'add-product' ? 'active' : '' %>">
          <i class="fa-solid fa-plus-circle"></i> Add Product
        </a>
        <a href="/" class="nav-item" target="_blank">
          <i class="fa-solid fa-external-link"></i> View Site
        </a>
        <% if (typeof user !== 'undefined' && user) { %>
        <a href="#" onclick="logout()" class="nav-item" style="color: #ef4444;">
          <i class="fa-solid fa-sign-out-alt"></i> Logout
        </a>
        <% } %>
      </nav>
    </aside>

    <!-- Admin Main Content -->
    <main class="admin-main">
      <!-- Admin Header -->
      <header class="admin-header">
      <div class="admin-header-content">
        <h1><%= typeof pageTitle !== 'undefined' ? pageTitle : 'Admin Dashboard' %></h1>
        <div class="admin-header-actions">
          <% if (typeof user !== 'undefined' && user) { %>
          <span class="text-muted me-3">Welcome, <strong><%= user.name %></strong></span>
          <% } %>
          <a href="/" class="btn btn-outline-secondary btn-sm">
            <i class="fa-solid fa-home"></i> Back to Site
          </a>
        </div>
      </div>
      </header>

      <!-- Admin Content Area -->
      <div class="admin-content">
        <%- body %>
      </div>
    </main>
  </div>

  <%- typeof scripts !== 'undefined' ? scripts : '' %>
  <script>
    async function logout() {
      if (confirm('Are you sure you want to logout?')) {
        try {
          const response = await fetch('/api/auth/admin/logout', {
            method: 'POST'
          });
          const data = await response.json();
          if (data.success) {
            window.location.href = '/admin/login';
          }
        } catch (error) {
          console.error('Logout error:', error);
          window.location.href = '/admin/login';
        }
      }
    }
  </script>
</body>
</html>



